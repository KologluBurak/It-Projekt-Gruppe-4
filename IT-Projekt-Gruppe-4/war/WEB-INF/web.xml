<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>loginService</servlet-name>
    <servlet-class>de.hdm.itProjektGruppe4.server.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>loginService</servlet-name>
    <url-pattern>/it_projekt_gruppe_4/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>messagingAdminService</servlet-name>
    <servlet-class>de.hdm.itProjektGruppe4.server.MessagingAdministrationImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>messagingAdminService</servlet-name>
    <url-pattern>/it_projekt_gruppe_4/messagingAdmin</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
    <servlet-name>messagingAdminService</servlet-name>
    <url-pattern>/it_projekt_gruppe_4_Report/messagingAdmin</url-pattern>
  </servlet-mapping>
  
  
  <!-- messagingAdmin Default page to serve -->
  <welcome-file-list>
    <welcome-file>IT_Projekt_Gruppe_4.html</welcome-file>
    <welcome-file>IT_Projekt_Gruppe_4_Report.html</welcome-file>
  </welcome-file-list>

</web-app>
